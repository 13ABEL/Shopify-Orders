<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/year_order_item_margin_vert">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/year_order_item_name"

            android:layout_marginStart="@dimen/year_order_item_title_margin"
            android:textStyle="bold"
            android:textSize="@dimen/year_order_item_title_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/year_order_item_total"

            android:textSize="@dimen/year_order_item_subtitle_size"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/year_order_item_title_margin"

            android:layout_alignBottom="@id/year_order_item_name"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/year_orders_horizontal_recyclerview"

            android:layout_below="@id/year_order_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingStart="@dimen/order_item_margin_hor"
            android:paddingTop="@dimen/order_item_margin_ver"
            android:paddingBottom="@dimen/order_item_margin_ver"

            android:orientation="horizontal"
            android:clipToPadding="false"/>


    </RelativeLayout>


</LinearLayout>