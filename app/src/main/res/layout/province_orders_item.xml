<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/province_order_item_height"
    android:layout_marginTop="@dimen/province_order_item_margin_vert"
    android:layout_marginStart="@dimen/province_order_item_margin_hor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/province_order_padding">

        <TextView
            android:id="@+id/province_order_item_province_name"
            android:layout_marginBottom="@dimen/province_order_title_margin_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/province_order_title_size"
            android:letterSpacing="@dimen/letter_spacing"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/province_order_item_total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/province_order_item_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>