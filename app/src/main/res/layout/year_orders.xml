<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <ProgressBar
        android:id="@+id/year_orders_progressbar"
        android:layout_width="@dimen/loading_icon_height"
        android:layout_height="@dimen/loading_icon_height"
        android:layout_centerInParent="true"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/year_orders_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/province_order_item_margin_vert"/>


</RelativeLayout>